{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Django: Run Server",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/todo_app/manage.py",
            "args": [
                "runserver"
            ],
            "django": true
        },
        {
            "name": "Django: Run tests",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/todo_app/manage.py",
            "args": [
                "test",
                "todos.tests"
            ],
            "django": true,
            "env": {
                "DJANGO_SETTINGS_MODULE": "todo_app.settings"
            }
        }
    ]
}